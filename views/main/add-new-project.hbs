<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <div class="overview">
        <h2 class="text-center">Enter your project details</h2>
        <br />
        <div class="new-gig-card">
          <form method="post">
            <div class="form-group">
              <label>Project name</label>
              <input type="text" class="form-control" placeholder="I will do something" name="project_name">

            </div>

            <div class="form-group">
              <label>Project category</label>
              <select class="form-control" name="project_category">
                <option>Private</option>
                <option>Public</option>
                <option>Recording Roulette</option>
              </select>
            </div>

            <div class="form-group input-group-lg">
              <label>Project about</label>
              <input type="text" class="form-control" placeholder="Describe your project" name="project_about">
            </div>

            <button type="submit" class="btn btn-success btn-lg">Submit</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>
