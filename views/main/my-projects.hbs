<div class="container">
  <h1 class="text-center">My projects</h1>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <div class="overview">
        <div class="add-project-card">
          <p class="text-center" style="margin-top: 40px;">
            <a href="/add-new-project" class="btn btn-success btn-lg">Add a new project</a>
          </div>
        </div>

        <div class="overview">
          <div class="list-orders-card">
            <div class="table-margin">
              <table class="table">
                <thead>
                  <tr>
                    <th>Project</th>
                    <th>Name</th>
                    <th>Type </th>

                  </tr>
                </thead>
                <tbody>
                  {{#each projects}}
                  <tr>
                    <td><a href="/project_service/{{ _id }}"><img class="order-image-my-gig" src="{{picture}}"></a></td>
                    <td>{{ name }}</td>
                    <td>{{ category }}</td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>

            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
